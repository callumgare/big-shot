{
  "name": "big-shot",
  "version": "0.2.5",
  "description": "A Vue-based image/video slide show widget",
  "author": "Callum Gare <callum@gare.com.au>",
  "repository": "github:callumgare/big-shot",
  "keywords": [
    "slide-show",
    "slide show",
    "slideshow",
    "vue",
    "photoswipe"
  ],
  "license": "MIT",
  "main": "dist/big-shot.ssr.js",
  "browser": "dist/big-shot.esm.js",
  "module": "dist/big-shot.esm.js",
  "unpkg": "dist/big-shot.min.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "serve": "vue-cli-service serve dev/serve.js",
    "build": "cross-env NODE_ENV=production rollup --config config/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config config/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config config/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config config/rollup.config.js --format iife",
    "lint": "concurrently npm:lint:*",
    "lint-fix": "concurrently npm:lint-fix:*",
    "lint:stylelint": "stylelint --config config/stylelint.config.js  'src/*.{vue,scss}'",
    "lint-fix:stylelint": "stylelint --config config/stylelint.config.js  'src/*.{vue,scss}' --fix",
    "lint:eslint": "eslint --ext .vue,.js src/ dev/",
    "lint-fix:eslint": "eslint --ext .vue,.js --fix src/ dev/",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-alias": "^2.2.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-replace": "^2.3.2",
    "@vue/cli-plugin-babel": "^4.5.11",
    "@vue/cli-plugin-eslint": "^4.5.11",
    "@vue/cli-service": "^4.3.1",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/composition-api": "^1.0.0-rc.1",
    "@vue/eslint-config-standard": "^5.1.2",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.18.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "minimist": "^1.2.5",
    "rollup": "^2.7.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-vue": "^5.1.6",
    "rollup-plugin-vue-inline-svg": "^1.1.1",
    "sass-loader": "^10.1.1",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "vue": "^2.6.11",
    "vue-svg-loader": "^0.16.0",
    "vue-template-compiler": "^2.6.11"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "vue": "^2.6.11"
  },
  "engines": {
    "node": ">=10"
  }
}
